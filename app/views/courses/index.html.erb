<!-- HWpractice part - showing the course details in a loop -->
<div class="course-list">

    <% @course_list.each do |data| %>

    <div class="course-item">
        <img src="https://fakeimg.pl/300x100/000000">
        <h2 class="course-title"><%= data[:name] %></h2>
        <div class="course-number-box">
            <h3 class="course-price"><%= data[:price] %></h3>
            <h3 class="course-duration"><%= data[:hour] %></h3>
        </div>
        <p class="course-intro"><%= data[:intro] %></p>
        <%= link_to "", edit_course_path(data[:id]), class: "course-link" %>
    </div>

    <% end %>

</div>
