<h1 class="page-title">編輯課程</h1>

<h2 class="individual-course-title"><%= @course.name %></h2>

<%= form_with(model: @course, url: course_path, method: :put, class: "course-edit-form") do |f| %>

    <div class="edit_course_filed">
        <%= f.label :name, "Course Name" %><br>
        <%= f.text_field :name %>
    </div>    

    <div class="edit_course_filed">
        <%= f.label :price, "Price" %><br>
        <%= f.number_field :price %>
    </div>

    <div class="edit_course_filed">
        <%= f.label :intro, "Course Intro" %><br>
        <%= f.text_area :intro %>
    </div>

    <div class="edit_course_filed">
        <%= f.label :hour, "Course Duration" %><br>
        <%= f.number_field :hour %>
    </div>

    <div class="individual-course-btn-box">
        <%= f.submit "更新課程" %>
        <%= link_to '刪除課程', url_for(action: :destroy, id: @course.id), method: :delete, data: { confirm: '確定要刪除課程？'}, class: "course-delete-btn" %>
    </div>

<% end %>