<h1>新增課程</h1>

<% if @course.errors.any? %>
  <% @course.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
<% end %>  

<!-- 如果使用resources方法產生routues, form_for自己會很聰明地猜url要去哪 -->
<%= form_with(model: @course) do |f| %>

    <div class="add_course_filed">
        <%= f.label :name, "Course Name" %><br>
        <%= f.text_field :name %>
    </div>    

    <div class="add_course_filed">
        <%= f.label :price, "Price" %><br>
        <%= f.number_field :price %>
    </div>

    <div class="add_course_filed">
        <%= f.label :intro, "Course Intro" %><br>
        <%= f.text_area :intro %>
    </div>

    <div class="add_course_filed">
        <%= f.label :hour, "Course Duration" %><br>
        <%= f.number_field :hour %>
    </div>

    <%= f.submit "Add Course" %>

<% end %>